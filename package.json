{
    "private": true,
    "name": "observable-js",
    "version": "0.3.0",
    "publisher": "GordonSmith",
    "displayName": "Observable JS",
    "description": "Observable JS Compiler",
    "icon": "images/ojsIcon.png",
    "categories": [
        "Programming Languages"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "clean": "rimraf out lib* dist types *.vsix",
        "compile": "tsc",
        "compile-watch": "npm run compile -- -watch",
        "compile-es6": "tsc --module es6 --outDir ./lib-es6",
        "compile-es6-watch": "npm run compile-es6 -- -w",
        "bundle": "webpack --mode production",
        "bundle-dev": "webpack --mode development",
        "bundle-watch": "webpack --mode development --watch",
        "bundle-runtime": "rollup -c",
        "bundle-runtime-watch": "npm run bundle-runtime -- -w",
        "minimize": "terser dist/runtime.js -c -m --source-map \"content='dist/runtime.js.map',url='runtime.min.js.map'\" -o dist/runtime.min.js",
        "build": "npm-run-all compile-es6 --parallel bundle bundle-runtime --serial minimize",
        "watch": "npm-run-all compile-es6 --parallel compile-es6-watch bundle-watch",
        "lint": "tslint --project . src/**/*.ts",
        "test": "sh ./scripts/e2e.sh",
        "standard-version": "standard-version",
        "vscode:prepublish": "run-s clean build",
        "git-push": "git push --follow-tags upstream master",
        "vsce-publish": "vsce publish",
        "vsce-package": "vsce package",
        "tag": "run-s standard-version git-push"
    },
    "dependencies": {},
    "devDependencies": {
        "@observablehq/inspector": "^3.2.1",
        "@observablehq/parser": "^4.0.1",
        "@observablehq/runtime": "^4.7.0",
        "@hpcc-js/common": "file:../hpcc-js/packages/common",
        "@hpcc-js/observable-md": "file:../hpcc-js/packages/observable-md",
        "@hpcc-js/util": "file:../hpcc-js/packages/util",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.12.36",
        "@types/vscode": "1.43.0",
        "rollup": "2.8.2",
        "@rollup/plugin-alias": "3.1.0",
        "@rollup/plugin-node-resolve": "7.1.3",
        "@rollup/plugin-commonjs": "11.0.2",
        "rollup-plugin-postcss": "3.1.1",
        "rollup-plugin-sourcemaps": "0.6.1",
        "jsdom": "^16.2.2",
        "mocha": "^6.2.2",
        "node-fetch": "^2.6.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "source-map-loader": "^0.2.4",
        "standard-version": "^7.1.0",
        "terser": "4.6.13",
        "tslib": "^1.11.1",
        "tslint": "^5.17.0",
        "typescript": "^3.8.3",
        "vsce": "^1.75.0",
        "vscode": "^1.1.36",
        "vscode-languageclient": "^6.1.3",
        "vscode-languageserver": "^6.1.1",
        "vscode-languageserver-textdocument": "^1.0.1",
        "vscode-test": "^1.3.0",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11"
    },
    "author": {
        "name": "Gordon Smith"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/GordonSmith/vscode-ojs.git"
    },
    "engines": {
        "vscode": "^1.43.0"
    },
    "extensionDependencies": [
        "vscode.javascript"
    ],
    "activationEvents": [
        "onLanguage:ojs",
        "onLanguage:omd"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ojs",
                "extensions": [
                    "ojs"
                ],
                "aliases": [
                    "OJS",
                    "ojs"
                ],
                "configuration": "./ojs.configuration.json"
            },
            {
                "id": "omd",
                "extensions": [
                    "omd"
                ],
                "aliases": [
                    "Observable Markdown"
                ]
            }
        ],
        "grammars": [
            {
                "language": "ojs",
                "scopeName": "source.ojs",
                "path": "./syntaxes/ojs.tmLanguage.json"
            },
            {
                "language": "omd",
                "scopeName": "text.html.markdown",
                "path": "./syntaxes/omd.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "ojs.checkSyntax",
                "title": "OJS: Check Syntax.",
                "description": "Syntax check OJS code."
            },
            {
                "command": "ojs.preview",
                "title": "OJS: Preview Web Page",
                "description": "Preview Observable Page.",
                "icon": {
                    "dark": "./images/preview-dark.svg",
                    "light": "./images/preview.svg"
                }
            },
            {
                "command": "ojs.import",
                "title": "OJS: Import notebook",
                "description": "Imports notebook cells from ObservableHQ."
            },
            {
                "command": "ojs.export",
                "title": "OJS: Export to HTML",
                "description": "Export as a self contained HTML file.",
                "icon": {
                    "dark": "./images/export-dark.svg",
                    "light": "./images/export.svg"
                }
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == ojs || resourceLangId == omd",
                    "command": "ojs.preview",
                    "group": "navigation@998"
                }
            ],
            "editor/context": [
                {
                    "when": "resourceLangId == ojs || resourceLangId == omd",
                    "command": "ojs.preview",
                    "group": "navigation@997"
                },
                {
                    "when": "resourceLangId == ojs || resourceLangId == omd",
                    "command": "ojs.import",
                    "group": "navigation@998"
                },
                {
                    "when": "resourceLangId == ojs || resourceLangId == omd",
                    "command": "ojs.export",
                    "group": "navigation@999"
                }
            ],
            "editor/title": [
                {
                    "when": "resourceLangId == ojs || resourceLangId == omd",
                    "command": "ojs.export",
                    "group": "navigation@997"
                },
                {
                    "when": "resourceLangId == ojs || resourceLangId == omd",
                    "command": "ojs.preview",
                    "group": "navigation@998"
                }
            ]
        },
        "keybindings": [
            {
                "command": "ojs.checkSyntax",
                "key": "f7",
                "when": "resourceLangId == ojs || resourceLangId == omd"
            },
            {
                "command": "ojs.preview",
                "key": "ctrl+k v",
                "mac": "cmd+k v",
                "when": "resourceLangId == ojs || resourceLangId == omd"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "OJS (Observable JS)",
            "properties": {
                "ojs.refreshPreviewOnSave": {
                    "type": "boolean",
                    "scope": "resource",
                    "default": true,
                    "description": "Refresh preview on save."
                },
                "ojs.showRuntimeValues": {
                    "type": "boolean",
                    "scope": "resource",
                    "default": false,
                    "description": "Show runtime values as diagnostic info."
                }
            }
        }
    }
}