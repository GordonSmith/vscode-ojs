{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "lib-es6",
        "target": "ES2021",
        "module": "ES6",
        "declaration": true,
        "declarationDir": "./types",
        "sourceMap": true,
        "declarationMap": true,
        "moduleResolution": "Node",
        "importHelpers": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "lib": [
            "DOM",
            "ES2021"
        ],
        "paths": {
            "@hpcc-js/*": [
                "./node_modules/@hpcc-js/*",
                "../hpcc-js/packages/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts"
    ]
}