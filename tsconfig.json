{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "lib-es6",
        "declarationDir": "./types",
        "module": "nodenext",
        "target": "ES2022",
        "jsx": "react",
        "jsxFactory": "vscpp",
        "jsxFragmentFactory": "vscppf",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "types": [
            "node"
        ],
        "paths": {
            "antlr4": [
                "./node_modules/antlr4/dist/antlr4.node.cjs"
            ],
            "@hpcc-js/*": [
                "./node_modules/@hpcc-js/*",
                "../Visualization/packages/*"
            ]
        }
    },
    "include": [
        "src/extension.ts"
    ]
}