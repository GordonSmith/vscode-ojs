{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "module": "es6",
        "moduleResolution": "node",
        "target": "ES2021",
        "outDir": "lib-es6",
        "sourceMap": true,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": false,
        "strictNullChecks": false,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "ES2019"
        ],
        "paths": {
            "@hpcc-js/*": [
                "./node_modules/@hpcc-js/*",
                "../hpcc-js/packages/*"
            ]
        }
    },
    "include": [
        "./src/**/*.ts"
    ]
}